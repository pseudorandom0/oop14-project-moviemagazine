<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="6dp">

    <ImageView
        android:layout_width="92dp"
        android:layout_height="138dp"
        android:id="@+id/poster"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/title"
        android:layout_below="@+id/voteAverage"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/poster"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:elegantTextHeight="false"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/voteAverage"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
        android:layout_marginTop="6dp"
        android:layout_marginRight="6dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/genres"
        android:singleLine="true"
        android:layout_above="@+id/overview"
        android:layout_toEndOf="@+id/poster"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="6dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/overview"
        android:layout_below="@+id/poster"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/genres"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_grade_black_24dp"
        android:id="@+id/ImageViewVoteAverage"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/voteAverage"
        android:layout_marginTop="6dp"
        android:layout_marginRight="6dp" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_date_range_black_24dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/poster"
        android:id="@+id/imageView2"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="6dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/release_year"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="3dp" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <ImageView
        android:layout_width="92dp"
        android:layout_height="138dp"
        android:id="@+id/listPoster"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/listName"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/listPoster"
        android:layout_margin="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/listFavouriteCount"
        android:layout_below="@+id/listName"
        android:layout_toEndOf="@+id/listPoster"
        android:layout_margin="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/listItemCount"
        android:layout_below="@+id/listFavouriteCount"
        android:layout_toEndOf="@+id/listPoster"
        android:layout_margin="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/listDescription"
        android:layout_below="@+id/listPoster"
        android:layout_alignParentStart="true"
        android:layout_margin="8dp"
        android:ellipsize="end"
        android:maxLines="2" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/imageView3"
        android:layout_alignBottom="@+id/listFavouriteCount"
        android:layout_toEndOf="@+id/listFavouriteCount"
        android:layout_marginLeft="3dp"
        android:src="@drawable/ic_favorite_black_24dp" />
</RelativeLayout>
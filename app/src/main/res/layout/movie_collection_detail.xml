<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:scrollbars="vertical"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="154dp"
        android:layout_height="231dp"
        android:id="@+id/collectionPoster"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/collectionName"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/collectionPoster"
        android:layout_margin="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/collectionOverview"
        android:layout_below="@+id/collectionPoster"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="169dp"
        android:id="@+id/collectionBackdrop"
        android:layout_below="@+id/collectionOverview"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/listAuthor"
        android:layout_alignBottom="@+id/collectionPoster"
        android:layout_toEndOf="@+id/collectionPoster"
        android:layout_margin="10dp"
        android:layout_marginBottom="30dp" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:scrollbars="vertical"
        android:layout_width="match_parent" android:layout_height="wrap_content">

        <ImageView
            android:layout_width="185dp"
            android:layout_height="278dp"
            android:id="@+id/detailPersonProfile"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_margin="6dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/detailPersonName"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/detailPersonProfile"
            android:layout_margin="6dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/detailPersonBirthDeath"
            android:layout_below="@+id/detailPersonName"
            android:layout_toEndOf="@+id/detailPersonProfile"
            android:layout_margin="6dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/detailPersonPlaceBirth"
            android:layout_below="@+id/detailPersonBirthDeath"
            android:layout_toEndOf="@+id/detailPersonProfile"
            android:layout_margin="6dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/detailPersonBiography"
            android:layout_below="@+id/detailPersonProfile"
            android:layout_alignParentStart="true"
            android:layout_margin="6dp" />

    </RelativeLayout>

</ScrollView>